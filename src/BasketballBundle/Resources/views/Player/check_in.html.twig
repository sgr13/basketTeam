{% extends "::basePlayer.html.twig" %}

{% block title %}Koszykówka - Zapisz się!{% endblock %}

{% block body %}
    <div id="mainContainerBackground">
    </div>
    <div class="sbi_container">
        {% if nextGame == 'notSet' %}
            <div id="noGameAlert">
                <span>Brak planów <br>na najbliższe spotkanie!</span>
                </div>
                <a href="{{ asset('/') }}">
                <div id="checkButton">
                    <span>Ok</span>
                </div></a>
            
        {% else %}
        <div id="nextGameInfo">
{#            <span>Najbliższy mecz: </span>#}
            <span class="thumbView">Najbliższy mecz:</span>
            <span>{{ nextGame.Place }}</span>
            <span>{{ result }}</span>
            <span>-</span>
            <span>{{ nextGame.Date }}</span>
        </div>
        {% if playerCheckedIn == 1 %}
            <a href="{{ path('signInOut', {'action': 'signOut'}) }}"><div id="checkButton">
            <span>Rezygnuję</span>
                </div></a>
        {% else %}
        <a href="{{ path('signInOut', {'action': 'signIn'}) }}"><div id="checkButton">
            <span>Wpisuję się</span>
            </div></a>
        {% endif %}
        <div id="popUpThumbView">
        </div>
        {% endif %}
    </div>
        
{% endblock %}
