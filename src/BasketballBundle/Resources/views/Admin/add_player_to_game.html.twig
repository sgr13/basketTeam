{% extends "::base.html.twig" %}

{% block title %}BasketballBundle:Admin:SelectDay{% endblock %}

{% block body %}
    
    <h3>Dodaj zawodnika do meczu</h3>
    <div class="row">
        <div class="col-xs-2">
            <form method="post" action="{{ asset('addPlayerToNextGame') }}">
                <select class="form-control input-md" name="player">
                {% for player in players %}
                    <option>{{ player.name }}</option>
                {% endfor %}
                </select><br>
                <input type="submit" value="Dodaj" class="btn btn-info">
            </form>
        </div>
    </div>
    
{% endblock %}
